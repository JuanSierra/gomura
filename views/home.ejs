<div class="pure-g">
	<div class="pure-u-1-3"> 
		&nbsp;
		<form class="pure-form pure-form-aligned">
			<div class="pure-menu">
				<ul class="pure-menu-list">
					<li ng-repeat="r in rooms" ng-model="r.name" ng-click="selectRoom(r.name)">
						<a class="pure-menu-link">{{r.name}}</a>
					</li>
				</ul>
			</div>
			<input type="text" placeholder="user" name="user" ng-model="user"/>
			<button type="submit" class="pure-button pure-button-primary" ng-click="joinRoom(user)">Join</button>
		</form>
	</div>
	<div class="pure-u-2-3"> 
		<form class="pure-form pure-form-aligned">
			<fieldset>
				<legend>New Room</legend>
				<div class="pure-control-group">
					<input type="room" placeholder="name" ng-model="room.name"/>

					<button type="submit" class="pure-button pure-button-primary" ng-click="newRoom()">Create</button>
				</div>
			</fieldset>
		</form>
	</div>
</div>